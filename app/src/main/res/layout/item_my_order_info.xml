<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/color_white"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tab_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_address_black"
        android:text="订单编号"/>

    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@+id/tv_tab_1"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_address_black"
        android:text="12222222"/>

    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/tv_order_no"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/red"
        android:text="已发货"/>
    <TextView
        android:id="@+id/tv_line_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_order_no"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/color_line_gray"/>

    <ImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_below="@+id/tv_line_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_line_1"
        android:layout_toEndOf="@+id/iv_goods_img"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxLines="2"
            android:textColor="@color/color_address_black"
            android:text="特级洒基端口号撒欢的看剑三电视剧啊看电视剧啊"/>
        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:layout_below="@+id/tv_goods_name"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="￥ 122.00元"/>

        <TextView
            android:id="@+id/tv_goods_guige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_gray_two"
            android:layout_alignParentBottom="true"
            android:textSize="14sp"
            android:visibility="visible"
            android:text="共1件商品   实付 ￥777.00元"/>
        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_text_gray_two"
            android:text="x2"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_line_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/iv_goods_img"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/color_line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line_2"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_button_1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/black_corner_bg"
            android:text=""
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_address_black"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_button_2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/red_corner_bg"
            android:text=""
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <TextView
            android:id="@+id/tv_button_3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/red_corner_bg"
            android:text=""
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>
</RelativeLayout>