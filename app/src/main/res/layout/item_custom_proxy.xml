<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_custom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_custom_proxy_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:src="@drawable/img_custom_proxy_head"
        />

    <TextView
        android:id="@+id/tv_custom_proxy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_custom_proxy_head"
        android:textSize="@dimen/dp18"
        android:layout_marginLeft="@dimen/dp20"
        android:text="征订产品名称"/>

    <TextView
        android:id="@+id/tv_custom_proxy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_custom_proxy_head"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_toRightOf="@id/tv_custom_proxy_title"
        android:layout_marginTop="5dp"
        android:text="中茶牌方普"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_custom_proxy_head"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="5dp"
        android:textColor="@color/blue"
        android:text="详情>>"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_custom_proxy_title"/>
</RelativeLayout>