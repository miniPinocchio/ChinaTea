<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_food_gray"
    tools:context=".ui.activity.mine.AddAddressActivity">

    <include layout="@layout/topbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="10dp"
        android:padding="12dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="14sp"
            android:textColor="@color/color_address_black"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="text"
            android:textSize="14sp"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColor="@color/color_address_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="0.5dp"
        android:padding="12dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="手机"
            android:textSize="14sp"
            android:textColor="@color/color_address_black"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:background="@null"
            android:inputType="phone"
            android:hint="请输入手机"
            android:textColor="@color/color_address_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="0.5dp"
        android:padding="12dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="选择城市"
            android:textSize="14sp"
            android:textColor="@color/color_address_black"/>
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:background="@null"
            android:hint="请选择城市"
            android:drawableEnd="@drawable/quanbu"
            android:textColor="@color/color_address_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="0.5dp"
        android:padding="12dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textSize="14sp"
            android:textColor="@color/color_address_black"/>
        <EditText
            android:id="@+id/et_address"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:background="@null"
            android:hint="请输入详细地址"
            android:textColor="@color/color_address_black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_set_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="0.5dp"
        android:padding="12dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_is_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wxzg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址"
            android:layout_marginLeft="8dp"
            android:textColor="@color/color_text_gray_two"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_normal"
        android:text="保存"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
</LinearLayout>