<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.goods.GoodsListActivity">

    <include layout="@layout/topbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_check_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="综合"
            android:gravity="center"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_check_2"
                android:layout_width="wrap_content"
                android:text="年份"
                android:drawablePadding="4dp"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/cptjjt"
                android:gravity="center"
                android:textColor="@color/color_address_black"
                android:textSize="14sp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_check_3"
                android:layout_width="wrap_content"
                android:text="新品"
                android:drawablePadding="4dp"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/cptjjt"
                android:gravity="center"
                android:textColor="@color/color_address_black"
                android:textSize="14sp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_check_4"
                android:layout_width="wrap_content"
                android:text="价格"
                android:drawablePadding="4dp"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/cptjjt"
                android:gravity="center"
                android:textColor="@color/color_address_black"
                android:textSize="14sp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_recycler_refersh"/>

</LinearLayout>